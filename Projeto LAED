int main(void){

setlocale(LC_ALL, "Portuguese");

    int menu = 0, porcao = 0, sobremesa = 0, bebidas = 0, decisao = 0, fim = 0;
    float batata = 12.50 , frango = 16.80, tilapia = 32.99, alcatra = 65.99;
    float bolo = 7.99, pudim = 9.49, brigadeiro = 1.50, petit = 19.80;
    float agua = 2.00, suco = 8.49, coca = 6.99, chopp = 12.99;
    float total = 0;

        do{
            printf("---------- PORÇÕES & CIA ----------\n\n");
            printf("----------------MENU---------------\n");
            printf("| 1- Porções                       |\n");
            printf("| 2- Sobremesa                     |\n");
            printf("| 3- Bebidas                       |\n");
            printf("|    Qual opção deseja abrir?      |\n");
            printf("-----------------------------------\n");
            scanf("%d", &menu);



        //====================================================================================================
       //Option PORÇÃO

                if(menu==1){
                    printf("------------------------------------\n");
                    printf("| 1- Batata Frita     |   R$12,50  |\n");
                    printf("| 2- Frango Frito     |   R$16,80  |\n");
                    printf("| 3- Filé de tilápia  |   R$32,99  |\n");
                    printf("| 4- Alcatra          |   R$65,99  |\n");
                    printf("|    Qual opção deseja abrir?      |\n");
                    printf("-----------------------------------\n");
                    scanf("%d", &porcao);

                        if(porcao == 1){
                            printf("Batata Frita - R$12,50 | Adicionada ao pedido\n");
                            total += batata;
                            }

                        if(porcao == 2){
                            printf("Frango Frito - R$16,80 | Adicionada ao pedido\n");
                            total += frango;
                            }

                        if(porcao == 3){
                            printf("Filé de Tilápia - R$32,99 | Adicionada ao pedido\n");
                            total += tilapia;
                            }

                        if(porcao == 4){
                            printf("Alcatra - R$65,99 | Adicionada ao pedido\n");
                            total += alcatra;
                            }

                        if(porcao != 1 && porcao != 2 && porcao != 3 &&
                            porcao != 4){
                            printf("Opção inválida. Porfavor, tente novamente!");
                            }

                    printf("\nDeseja algo mais?\n");
                    printf("1- Sim\n");
                    printf("2- Não\n");
                    scanf("%d", &decisao);

                        if(decisao == 1){
                            system("cls");
                        }
                        if(decisao == 2){
                            menu = fim;
                        }

                        printf("\nTotal do pedido: R$%5.2f", total);
                        printf("\nSEU PEDIDO ESTÁ SENDO PREPARADO!\n");
                        printf("\nOBRIGADO PELA CONFIANÇA!!!\n");

                    }


        //====================================================================================================
        //Option SOBREMESA

                if(menu == 2){

                    printf("-----------------------------------\n");
                    printf("| 1- Bolo de Chocolate  |  R$7,99  |\n");
                    printf("| 2- Pudim              |  R$9,49  |\n");
                    printf("| 3- Brigadeiro         |  R$1,50  |\n");
                    printf("| 4- Petit Gateau       |  R$19,80 |\n");
                    printf("|    Qual opção deseja abrir?      |\n");
                    printf("------------------------------------\n");
                    scanf("%d", &sobremesa);

                            if(sobremesa == 1){
                                printf("Bolo de Chocolate - R$7,99 | Adicionada ao pedido\n");
                                total += bolo;
                                }

                            if(sobremesa == 2){
                                printf("Pudim - R$9,49 | Adicionada ao pedido\n");
                                total += pudim;
                                }

                            if(sobremesa == 3){
                                printf("Brigadeiro - R$1,50 | Adicionada ao pedido\n");
                                total += brigadeiro;
                                }

                            if(sobremesa == 4){
                                printf("Petit Gateau - R$19,80 | Adicionada ao pedido\n");
                                total += petit;
                                }

                        printf("\nDeseja algo mais?\n");
                        printf("1- Sim\n");
                        printf("2- Não\n");
                        scanf("%d", &decisao);

                            if(decisao == 1){
                            system("cls");
                            }

                            if(decisao == 2){
                            menu = fim;
                            }

                            printf("\nTotal do pedido: R$%5.2f", total);
                            printf("\nSEU PEDIDO ESTÁ SENDO PREPARADO!\n");
                            printf("\nOBRIGADO PELA CONFIANÇA!!!\n");

                    }

        //====================================================================================================
       //Option BEBIDAS

       if(menu == 3){

                    printf("------------------------------------\n");
                    printf("| 1- Água             |   R$2,00   |\n");
                    printf("| 2- Suco de Laranja  |   R$8,49   |\n");
                    printf("| 3- Coca-Cola        |   R$6,99   |\n");
                    printf("| 4- Chopp            |   R$12,99  |\n");
                    printf("|    Qual opção deseja abrir?      |\n");
                    printf("------------------------------------\n");
                    scanf("%d", &bebidas);

                            if(sobremesa == 1)
                            printf("Água - R$2,00 | Adicionada ao pedido\n");
                                total += agua;

                            if(sobremesa == 2)
                            printf("Suco de Laranja - R$8,49 | Adicionada ao pedido\n");
                                total += suco;

                            if(sobremesa == 3)
                            printf("Coca-Cola - R$6,99 | Adicionada ao pedido\n");
                                total += coca;

                            if(sobremesa == 4)
                            printf("Chopp - R$12,99 | Adicionada ao pedido\n");
                                total += chopp;

                        printf("\nDeseja algo mais?\n");
                        printf("1- Sim\n");
                        printf("2- Não\n");
                        scanf("%d", &decisao);

                            if(decisao == 1){
                            system("cls");}

                            if(decisao == 2){
                                menu = fim;

                            printf("\nTotal do pedido: R$%5.2f", total);
                            printf("\nSEU PEDIDO ESTÁ SENDO PREPARADO!\n");
                            printf("\nOBRIGADO PELA CONFIANÇA!!!\n");
                        }
                    }


        }while(menu != fim);

return(0);
}
